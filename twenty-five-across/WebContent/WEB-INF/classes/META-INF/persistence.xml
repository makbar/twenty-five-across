<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="1.0">
	<persistence-unit name="persistence_ctx">
		<description>Manages Game and User aspects</description>
		<jta-data-source>jdbc/tfacross</jta-data-source>
		<class>twentyfiveacross.ejbs.UserInfo</class>
		<properties>
			<property name="eclipselink.jdbc.password" value="tfacross"/>
			<property name="eclipselink.jdbc.user" value="tfacross"/>
			<property name="eclipselink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
			<property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/tfacross"/>
			<property name="eclipselink.ddl-generation" value="none"/>
		</properties>
	</persistence-unit>
</persistence>